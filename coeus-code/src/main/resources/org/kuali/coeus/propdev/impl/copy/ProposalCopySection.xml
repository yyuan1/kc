<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/util
http://www.springframework.org/schema/util/spring-util-3.0.xsd">

<bean id="PropDev-CopySection" parent="PropDev-CopySection-parentBean" />
    <bean id="PropDev-CopySection-parentBean" abstract="true"
          parent="Uif-VerticalBoxGroup" class="org.kuali.rice.contrib.uif.element.WizardGroup"
          p:fieldBindingObjectPath="proposalCopyCriteria" p:resetDataOnRefresh="true"
          p:retrieveViaAjax="true">
        <property name="header">
            <bean parent="Uif-HeaderOne" p:headerText="Copy To New Document" />
        </property>
        <property name="items">
            <list>
                <bean parent="PropDev-CopySectionPage1" p:order="10" />
            </list>
        </property>
    </bean>

    <bean id="PropDev-CopySectionPage1" parent="PropDev-CopySectionPage1-parentBean" />
    <bean id="PropDev-CopySectionPage1-parentBean" abstract="true"
          parent="Uif-CssGridSection-1FieldLabelColumn">
        <property name="items">
            <list>

                <bean parent="Uif-MessageField" p:messageText="@{document.developmentProposal.ownedByUnitNumber} - @{document.developmentProposal.ownedByUnit.unitName}"
                      p:fieldLabel.labelText="Original Lead Unit" p:fieldLabel.renderColon="false"
                      p:order="10" />

                <bean parent="PropDev-CopySection-OwnedByUnitNumberField" p:propertyName="leadUnitNumber"
                      p:enableAutoQuickfinder="false"
                      p:order="20"/>

                <bean parent="Uif-InputField" p:propertyName="includeBudget" p:order="30" p:fieldLabel.renderColon="false">
                    <property name="control">
                        <bean parent="Uif-CheckboxControl" p:checkboxLabel="Yes. Include Budget(s)." p:disabled="false"/>
                    </property>
                </bean>

                <bean id="PropDev-CopySectionPage1-BudgetSelection" parent="PropDev-CopySectionPage1-BudgetSelection-parentBean"
                      p:order="40"/>

                <bean parent="Uif-InputField" p:propertyName="includeAttachments" p:order="50" p:fieldLabel.renderColon="false">
                     <property name="control">
                        <bean parent="Uif-CheckboxControl" p:checkboxLabel="Yes. Include attachment." p:disabled="false"/>
                    </property>
                </bean>

                <bean parent="Uif-InputField" p:propertyName="includeQuestionnaire" p:order="60" p:fieldLabel.renderColon="false">
                    <property name="control">
                        <bean parent="Uif-CheckboxControl" p:checkboxLabel="Yes. Include questionnaire" p:disabled="false"/>
                    </property>
                </bean>

            </list>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase">
                <property name="items">
                    <list>
                        <bean parent="PropDev-CopySectionButton-Continue"
                              p:actionLabel="Copy..." p:methodToCall="copy" p:successCallback="closeLightbox();" p:order="10"/>
                        <bean parent="Uif-PrimaryActionButton" p:actionScript="closeLightbox();" p:actionLabel="Close" p:order="20" />
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="PropDev-CopySection-OwnedByUnitNumberField" parent="PropDev-CopySection-OwnedByUnitNumberField-parentBean" />
    <bean id="PropDev-CopySection-OwnedByUnitNumberField-parentBean"
          abstract="true" parent="Uif-InputField" p:fieldLabel.renderColon="false" >
        <property name="control">
            <bean parent="Uif-DropdownControl"/>
        </property>
        <property name="optionsFinder">
            <bean class="org.kuali.coeus.propdev.impl.basic.LeadUnitValuesFinder" p:addBlankOption="false"/>
        </property>
    </bean>

    <bean id="PropDev-CopySectionPage1-BudgetSelection-parentBean"
          abstract="true" parent="Uif-InputField" p:fieldLabel.renderColon="false"
          p:propertyName="budgetVersions" p:label="Budget Vaersion">
        <property name="control">
            <bean parent="Uif-DropdownControl">
                <property name="options">
                    <list>
                        <bean parent="Uif-KeyLabelPair" p:key="all version" p:value="All Versions" />
                        <bean parent="Uif-KeyLabelPair" p:key="final version" p:value="Final Version" />
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="PropDev-CopySectionButton-Continue" parent="PropDev-CopySectionButton-Continue-parentBean" />
    <bean id="PropDev-CopySectionButton-Continue-parentBean"
          abstract="true" parent="Uif-PrimaryActionButton" p:refreshId="PropDev-CopySection" />

    <bean id="PropDev-CopySectionPage2" parent="PropDev-CopySectionPage2-parentBean" />
    <bean id="PropDev-CopySectionPage2-parentBean" abstract="true"
          parent="Uif-CssGridGroup">
        <property name="items">
            <list>
                <bean parent="PropDev-CopySectionPage2-Results"
                      p:order="10" />
            </list>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase">
                <property name="items">
                    <list>
                        <bean parent="PropDev-CopySection-Button-Back"
                              p:actionParameters="PropDev-CopySection.step:0" p:order="10" />
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="PropDev-CopySection-Button-Back" parent="PropDev-CopySection-Button-Back-parentBean" />
    <bean id="PropDev-CopySection-Button-Back-parentBean"
          abstract="true" parent="Uif-PrimaryActionButton"
          p:actionLabel="Go back" />

    <bean id="PropDev-CopySectionPage2-Results" parent="PropDev-CopySectionPage2-Results-parentBean" />
    <bean id="PropDev-CopySectionPage2-Results-parentBean"
          abstract="true" parent="Uif-HeaderOne" p:headerText="Copy Results" />

</beans>
